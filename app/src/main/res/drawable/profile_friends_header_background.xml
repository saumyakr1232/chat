<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- solids that simulate shadow !-->
    <item>
        <shape>
            <corners android:radius="24dp"/>
            <gradient
                android:startColor="#15CCCCCC"
                android:endColor="#00ffffff"
                android:angle="90"/>
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="24dp"/>
            <gradient
                android:startColor="#30CCCCCC"
                android:endColor="#00ffffff"
                android:angle="90"/>
            <padding android:top="1dp" android:right="1dp" android:bottom="1dp" android:left="1dp" />
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="24dp"/>
            <gradient
                android:startColor="#45CCCCCC"
                android:endColor="#00ffffff"
                android:angle="90"/>
            <padding android:top="1dp" android:right="1dp" android:bottom="1dp" android:left="1dp" />
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="24dp"/>
            <gradient
                android:startColor="#60CCCCCC"
                android:endColor="#00ffffff"
                android:angle="90"/>
            <padding android:top="1dp" android:right="1dp" android:bottom="1dp" android:left="1dp" />
        </shape>
    </item>

    <!--main background -->
    <item>
        <shape>
            <corners android:radius="24dp"/>
            <solid android:color="#ffffff" />
        </shape>
    </item>
</layer-list>